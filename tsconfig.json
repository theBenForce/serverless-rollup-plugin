{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "ES2015",
    "target": "es2017",
    "lib": ["es6"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
